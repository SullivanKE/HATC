@model HATC.Models.Session
@{
    ViewData["Title"] = "Add";
    List<User> DMs = ViewData["DMs"] as List<User>;
    List<User> users = ViewData["Users"] as List<User>;
    List<Character> characters = ViewData["Characters"] as List<Character>;

}

<h1 class="jumbotron">Add</h1>

<h4>SessionModel</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SessionId" class="control-label"></label>
                <input asp-for="SessionId" class="form-control" />
                <span asp-validation-for="SessionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DM" class="control-label"></label>
                <select asp-for="DM" class="form-control">
                    @foreach(User u in DMs)
                    {
                        <option>@u.UserName</option>
                    }
                </select>
                <span asp-validation-for="DM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InGameDate" class="control-label">In Game Date</label>
                <input asp-for="InGameDate" class="form-control" />
                <span asp-validation-for="InGameDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <p class="h3">Characters</p>
                @for (int i = 0; i < Model.Users.Count(); i++)
                {

                    <div class="row align-items-end">
                        <div class="col">
                            <label asp-for="Users.ToList()[i].Characters[0]" class="control-label">Character Name</label>
                            <select asp-for="Users.ToList()[i].Characters[0]" class="form-control">
                                @foreach(Character character in characters)
                                {
                                    <option value="@character">@character.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col">
                            <label asp-for="Users.ToList()[i]" class="control-label">Player Name</label>
                            <select asp-for="Users.ToList()[i]" class="form-control">
                                @foreach(User user in users)
                                {
                                    <option value="@user">@user.UserName</option>
                                }
                            </select>
                        </div>
                        <br />
                    </div>
                
                }
                

            </div>


            <div class="form-group">
                <p class="h3">Ad-hoc Experience</p>
                @for (int i = 0; i < Model.SessionItems.ToList().Count; i++)
                {
                    <div class="row align-items-end">
                        <div class="col">
                            <label asp-for="SessionItems.ToList()[i].ItemName" class="control-label">Adhoc Name</label>
                            <input asp-for="SessionItems.ToList()[i].ItemName" class="form-control" />
                        </div>
                        <div class="col">
                            <label asp-for="SessionItems.ToList()[i].Value" class="control-label">Experience</label>
                            <input asp-for="SessionItems.ToList()[i].Value" class="form-control" />
                        </div>
                        <div class="col">
                            <input method="post" type="submit" class="btn btn-danger btn-sm" value="-" asp-route-index="@i" asp-action="DelAdhoc" />
                        </div>
                        <br />
                    </div>
                }
                <input method="post" type="submit" class="btn btn-success btn-sm" value="+" name="AddAdhoc" asp-action="AddAdhoc" />
            </div>

            <div class="form-group">
                <p class="h3">Combat Experience</p>
                @for (int i = 0; i < Model.Monsters.ToList().Count; i++)
                {
                    <div class="row align-items-end">
                        <div class="col">
                            <label asp-for="Monsters.ToList()[i].Name" class="control-label">Monster</label>
                            <input asp-for="Monsters.ToList()[i].Name" class="form-control" />
                        </div>
                        <div class="col">
                            <label asp-for="Monsters.ToList()[i].Cr" class="control-label">CR</label>
                            <select asp-for="Monsters.ToList()[i].Cr" class="form-control">
                            @foreach(string key in Monster.CrDict.Keys)
                            {
                                <option value="@key">@key</option>
                            }
                            </select>
                        </div>
                        <div class="col">
                            <label asp-for="Monsters.ToList()[i].Count" class="control-label">Count</label>
                            <input asp-for="Monsters.ToList()[i].Count" class="form-control"  />
                        </div>

                        <div class="col">
                            <input method="post" type="submit" class="btn btn-danger btn-sm" value="-" asp-route-index="@i" asp-action="DelMonster" />
                        </div>
                        <br />
                    </div>
                }

                <input method="post" type="submit" class="btn btn-success btn-sm" value="+" name="AddMonster" asp-action="AddMonster" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
