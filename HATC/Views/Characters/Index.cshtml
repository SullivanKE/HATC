@model IEnumerable<HATC.Models.Character>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Player
            </th>
            <th>
                Character
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {

            <tr>
                <td>
                     @Html.DisplayFor(modelItem => item.Player.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CharacterId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CharacterId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CharacterId">Delete</a>
                </td>
            </tr>

}       
    </tbody>
</table>
